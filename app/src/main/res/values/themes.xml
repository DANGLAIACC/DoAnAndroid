<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoAnAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="login_edittext">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@drawable/rounded</item>
    </style>
    <style name="vector">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">228dp</item>
        <item name="android:contentDescription">@string/img_decription</item>
        <item name="android:rotationX">180</item>
        <item name="android:rotationY">180</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="detail_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/darkgray</item>

    </style>

    <style name="detail_lblTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>