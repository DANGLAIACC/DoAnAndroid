<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoAnAndroid" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="login_edittext">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@drawable/rounded</item>
    </style>
    <style name="vector">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">228dp</item>
        <item name="android:contentDescription">@string/img_decription</item>
        <item name="android:rotationX">180</item>
        <item name="android:rotationY">180</item>
        <item name="android:scaleType">fitXY</item>
    </style>
</resources>