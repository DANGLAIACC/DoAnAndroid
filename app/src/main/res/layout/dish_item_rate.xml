<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="8dp"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/foodImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/img_decription"
            android:src="@drawable/imgdemo" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/foodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/foodImg"
        app:layout_constraintEnd_toEndOf="@id/foodImg"
        app:layout_constraintTop_toBottomOf="@id/foodImg"
        android:text="@string/home.dishname"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/foodName"
        app:layout_constraintStart_toStartOf="@id/foodName"/>
    <TextView
        android:id="@+id/rateStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        app:layout_constraintStart_toEndOf="@id/star"
        app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/star"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:id="@+id/imgCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/rateStar"
        app:layout_constraintTop_toTopOf="@id/rateStar"
        app:layout_constraintBottom_toBottomOf="@id/rateStar"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        app:layout_constraintTop_toTopOf="@id/rateStar"
        app:layout_constraintBottom_toBottomOf="@id/rateStar"
        app:layout_constraintStart_toEndOf="@id/imgCmt"
        android:layout_marginLeft="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>