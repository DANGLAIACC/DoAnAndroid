<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/shopImg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_decription"
        android:src="@drawable/imgdemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dishName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/home.dishname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopImg" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/dishName"
        app:layout_constraintTop_toBottomOf="@id/dishName" />

    <TextView
        android:id="@+id/evaRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="4.6"
        app:layout_constraintBottom_toBottomOf="@id/star"
        app:layout_constraintStart_toEndOf="@id/star"
        app:layout_constraintTop_toTopOf="@id/star" />

    <ImageView
        android:id="@+id/imgCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@id/evaRate"
        app:layout_constraintStart_toEndOf="@id/evaRate"
        app:layout_constraintTop_toTopOf="@id/evaRate" />

    <TextView
        android:id="@+id/evaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="15"
        app:layout_constraintBottom_toBottomOf="@id/evaRate"
        app:layout_constraintStart_toEndOf="@id/imgCmt"
        app:layout_constraintTop_toTopOf="@id/evaRate" />
</androidx.constraintlayout.widget.ConstraintLayout>